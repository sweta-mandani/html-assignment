@*----------------------------------------------------------Login page------------------------------------------------------------------*@
@model HRM.DATA.AppUser

<h1>User Login</h1>

<form asp-controller="Account" asp-action="Login">
    <div class="form-group col-sm-6">
        <label for="Username">Email</label>
        <input type="text" class="form-control" id="Username" asp-for="Email" placeholder="Enter username">
    </div>
    <div class="form-group col-sm-6">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" asp-for="Password" placeholder="Enter password">
    </div>
    <div class="form-group col-sm-6">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>  